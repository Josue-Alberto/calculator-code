        private void buttonPoint_Click(object sender, EventArgs e)
        {
            if (caja.Text.Contains('.') == false)
            {
                if (caja.Text != "")
                {
                    caja.Text = caja.Text + ".";
                }
            }
        }

        private void buttonPlus_Click(object sender, EventArgs e)
        {
            val1 = Convert.ToDouble(caja.Text);
            sign = "+";
            cajaN.Visible = true;
            cajaN.Text = caja.Text + " +";
            limpiar();
        }

        private void buttonLess_Click(object sender, EventArgs e)
        {
            val1 = Convert.ToDouble(caja.Text);
            sign = "-";
            cajaN.Visible = true;
            cajaN.Text = caja.Text + " -";
            limpiar();
        }

        private void buttonMult_Click(object sender, EventArgs e)
        {
            val1 = Convert.ToDouble(caja.Text);
            sign = "*";
            cajaN.Visible = true;
            cajaN.Text = caja.Text + " *";
            limpiar();
        }

        private void buttonDiv_Click(object sender, EventArgs e)
        {
            val1 = Convert.ToDouble(caja.Text);
            sign = "/";
            cajaN.Visible = true;
            cajaN.Text = caja.Text + " /";
            limpiar();
        }

        private void buttonAC_Click(object sender, EventArgs e)
        {
            caja.Clear();
        }

        private void buttonC_Click(object sender, EventArgs e)
        {
            int dato = caja.TextLength;
            int dato1 = dato;
            if (dato1 == 0 ) { 

            }
            else { caja.Text = caja.Text.Substring(0, caja.Text.Count() - 1);}
            
        }
        private void buttonEqual_Click(object sender, EventArgs e)
        {
            val2 = Convert.ToDouble(caja.Text);
            if(sign == "+")
            {
                caja.Text = Convert.ToString(val1 + val2);
            }
            if (sign == "-")
            {
                caja.Text = Convert.ToString(val1 - val2);
            }
            if (sign == "*")
            {
                caja.Text = Convert.ToString(val1 * val2);
            }
            if (sign == "/")
            {
                caja.Text = Convert.ToString(val1 / val2);
            }
            cajaN.Visible = false;
            cajaN.Text = "";
        }
        public void agr(int num)
        {
            if (caja.Text == "")
            {
                caja.Text = num.ToString();
            }
            else
            {
                caja.Text = caja.Text + num.ToString();
            }
        }

        public void limpiar()
        {
            caja.Clear();
            caja.Focus();
        }
        
    }
}
