        public double val2;
        public string sign;
        public string elim;
        public Form1()
        {
            InitializeComponent();
            cajaN.Visible = false;
            this.Text = "Calculadora";
        }

        private void button1_Click(object sender, EventArgs e)
        {
            agr(1);
            
        }

        private void button2_Click(object sender, EventArgs e)
